{
    "version": 2,
    "builds": [
        {
            "src": "next.config.js",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ],
    "env": {
        "NEXT_PUBLIC_API_URL": "your-api-url-here"
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://your-backend-url.com/api/:path*"
        }
    ]
}
